{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "./dist/**"
  ]
}
